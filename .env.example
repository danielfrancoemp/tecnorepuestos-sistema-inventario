# ARCHIVO DE EJEMPLO ÚTIL PARA POSTGRES. EL PROYECTO SERÁ CON ORACLE.
# =============================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================
NODE_ENV=development
PORT=3000
HOST=localhost

# =============================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================
# PostgreSQL
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tecnorepuestos_db
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# MySQL (alternativa)
# DB_DIALECT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=tecnorepuestos_db
# DB_USER=root
# DB_PASSWORD=tu_password_aqui

# Configuración de pool de conexiones
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================
# CONFIGURACIÓN DE JWT
# =============================================
JWT_SECRET=cambiar_por_clave_secreta_muy_segura_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=cambiar_por_otra_clave_secreta_diferente
JWT_REFRESH_EXPIRES_IN=7d

# =============================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# CORS - Orígenes permitidos
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# =============================================
# CONFIGURACIÓN DE LOGS
# =============================================
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# =============================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================
UPLOAD_DIR=public/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# =============================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM=TecnoRepuestos <noreply@tecnorepuestos.com>

# =============================================
# CONFIGURACIÓN DE PAGINACIÓN
# =============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================
# CONFIGURACIÓN DE STOCK
# =============================================
STOCK_MINIMO_DEFAULT=10
ALERTA_STOCK_BAJO=true

# =============================================
# CONFIGURACIÓN DE IVA
# =============================================
IVA_PORCENTAJE=15

# =============================================
# CONFIGURACIÓN DE FRONTEND (Opcional)
# =============================================
FRONTEND_URL=http://localhost:5173
API_PREFIX=/api/v1

# =============================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================
DEBUG_MODE=true
SHOW_SQL_QUERIES=false